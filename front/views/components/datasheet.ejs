<div class="uk-card uk-card-default uk-card-body row">
  <div class="col-md-24">
    <div class="row">
      <div class="col-md-24 uk-margin-medium-bottom">
        <a href="/">Voltar</a>
      </div>
      <div class="col-md-12">
        <h3 class="uk-card-title">Ficha Técnica</h3>
      </div>
      <div class="col-md-12 uk-flex-end">
        <button class="uk-button uk-button-default uk-margin-small-right" type="button"
          uk-toggle="target: #modal-contato">Fazer uma Proposta</button>
      </div>
    </div>
    <div class="container">
      <div>
        <div class="ficha-tecnica">
          <div class="itens">
            <i class="material-icons">
              open_with
            </i>
            <strong>Área Útil</strong>
            <p>
              <%= data.area %> m<sup>2</sup>
            </p>
          </div>
          <div class="itens">
            <i class="material-icons">
              single_bed
            </i>
            <strong>Dormitórios</strong>
            <p>
              <%= data.dorms %>
            </p>
          </div>
          <div class="itens">
            <i class="material-icons">
              bathtub
            </i>
            <strong>Banheiros</strong>
            <p>
              <%= data.toilets %>
            </p>
          </div>
          <div class="itens">
            <i class="material-icons">
              directions_car
            </i>
            <strong>Garagem</strong>
            <p>
              <%= data.garages %>
            </p>
          </div>
        </div>

        <div class="ficha-tecnica">

          <div class="itens select">
            <i class="material-icons">
              pets
            </i>
            <strong>Animais</strong>
            <p>
              <%= data.animals ? "Sim" : "Não" %>
            </p>
          </div>

          <div class="itens select">
            <i class="material-icons">
              insert_drive_file
            </i>
            <strong>Operação</strong>
            <p>
              <%= data.operation %>
            </p>
          </div>

          <div class="itens select">
            <i class="material-icons">
              border_all
            </i>
            <strong>Finalidade</strong>
            <p>
              <%= data.finality %>
            </p>
          </div>
          <div class="itens select">
            <i class="material-icons">
              notes
            </i>
            <strong>Tipo</strong>
            <p>
              Casa
            </p>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-10 card-tecnica">
            <h3 class="col-md-12 "><em class="em-casa">Mensal</em></h3>
            <div class="uk-card-valores">
              <div class="itens">
                <div>
                  <strong>Codigo: </strong>
                </div>
                <p>
                  <%= data.code %>
                </p>
              </div>
              <div class="itens">
                <div>
                  <i class="material-icons">
                    attach_money
                  </i>
                  <strong>Valor: </strong>
                </div>
                <p>
                  <%= data.value %>
                </p>
              </div>
              <div class="itens">
                <div>
                  <i class="material-icons">
                    monetization_on
                  </i>
                  <strong>IPTU: </strong>
                </div>
                <p>
                  <%= data.iptu %>
                </p>
              </div>
              <div class="itens">
                <div>
                  <i class="material-icons">
                    pool
                  </i>
                  <strong>Condominio: </strong>
                </div>
                <p>
                  <%= data.condominium %>
                </p>
              </div>
              <div class="itens">
                <div>
                  <i class="material-icons">
                    location_searching
                  </i>
                  <strong>Cep: </strong>
                </div>
                <p>
                  <%= data.postal_code %>
                </p>
              </div>
              <div class="itens">
                <div>
                  <i class="material-icons">
                    near_me
                  </i>
                  <strong>Cidade: </strong>
                </div>
                <p>
                  <%= data.city %>
                </p>
              </div>
              <div class="itens">
                <div>
                  <i class="material-icons">
                    room
                  </i>
                  <strong>Bairro: </strong>
                </div>
                <p>
                  <%= data.neighbourhood %>
                </p>
              </div>
              <div class="tipo mg-top-5">
                <span class="uk-label uk-label-success uk-valor">
                  <label>
                    <h3><%= data.value %></h3>
              </div>
            </div>
          </div>

          <div class="col-lg-14 texto">
            <h3><em class="em-casa">Histórico</em></h3>
            <div class="form-control">
              <textarea class="uk-textarea" disabled name="" id="" cols="30"
                rows="17"><%= data.description %></textarea>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
